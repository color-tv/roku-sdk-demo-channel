<component name="colortv_closeButton" extends="Group">
  
    <interface>
        <field id="width" type="int" />
        <field id="height" type="int" />
        <field id="focused" type="bool" />
    </interface>

    <script type="text/brightscript" uri="pkg:/components/colortv/colortv_closeButton.brs" />

    <children>
        <Poster 
          id="closeButtonBg"
          uri="pkg:/images/colortv/color_tv_icon_close_engagement.png" />
        <Animation
          id="scaleUpAnimation"
          duration="0.1"
          easeFunction="outCubic"
          >
            <Vector2DFieldInterpolator
              key="[0.0, 1.0]"
              keyValue="[ [1.0, 1.0], [1.3, 1.3] ]"
              fieldToInterp="closeButtonBg.scale" />
        </Animation>
        <Animation
          id="scaleDownAnimation"
          duration="0.1"
          easeFunction="outCubic"
          >
            <Vector2DFieldInterpolator
              key="[0.0, 1.0]"
              keyValue="[ [1.3, 1.3], [1.0, 1.0] ]"
              fieldToInterp="closeButtonBg.scale" />
        </Animation>
    </children>
</component>