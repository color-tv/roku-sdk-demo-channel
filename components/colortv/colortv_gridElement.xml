<component name="colortv_gridElement" extends="Group">

    <script type="text/brightscript" uri="pkg:/components/colortv/colortv_gridElement.brs" />

    <interface>
        <field id="focused" type="bool" />
        <field id="contentModel" type="assocarray" onChange="setContentModel" />
        <field id="startTranslation" type="vector2d" />
        <field id="currentScreenPosition" type="integer" />
        <field id="currentlyShownElementIndex" type="integer" />
        <field id="impressionNode" type="node" />
        <field id="parentNodeReference" type="node" />
        <field id="backgroundColor" type="colorarray" />
        <field id="textColor" type="colorarray" />
        <field id="favouriteButtonColor" type="colorarray" />
        <field id="favouriteButtonTextColor" type="colorarray" />
    </interface>

    <children>
        <colortv_gridDiscoveryElement
          id="gridDiscoveryElement" />
        <colortv_gridContentElement
          id="gridContentElement" />
        <colortv_gridContentSimplifiedElement
          id="gridContentSimplifiedElement" />
    </children>
</component>
