<component name="colortv_progressSpinner" extends="Group">

    <script type="text/brightscript" uri="pkg:/components/colortv/colortv_progressSpinner.brs" />

    <children>
        <Rectangle 
          id="background"
          width="1920"
          height="1080"
          color="0x000000ff"
          >
            <Poster 
              id="progressLoaderImage"
              uri="pkg:/images/colortv/color_tv_spinner_white.png"
              width="100"
              height="100"
              rotation="0.0"
              translation="[910, 490]"
              scaleRotateCenter="[50, 50]" />
        </Rectangle>
        <Animation
          id="rotateAnimation"
          duration="1"
          easeFunction="inOutCubic"
          repeat="true"
          >
            <FloatFieldInterpolator
              key="[0.0, 1.0]"
              keyValue="[ 6.2831853086, 0.0 ]"
              fieldToInterp="progressLoaderImage.rotation" />
        </Animation>
    </children>
</component>