<component name="colortv_toast" extends="Group">
  
    <interface>
        <field id="text" type="string" />
        <field id="parentNodeReference" type="node" />
    </interface>

    <script type="text/brightscript" uri="pkg:/components/colortv/colortv_toast.brs" />

    <children>
        <Rectangle
          id="toastBg"
          color="0xA0A0A0FF"
          opacity="0.0"
          height="50"
          translation="[0, 900]"
          >
            <Label
              id="toastLabel"
              wrap="false" 
              color="0x000000FF" 
              font="font:SmallestSystemFont"
              horizAlign = "center"
              vertAlign = "center"
              height="50"/>
        </Rectangle>
        <Animation
          id="toastAnimation"  
          duration="5"  
          repeat="false"  
          control="start"  
          easeFunction="linear"
          >
            <FloatFieldInterpolator
              id="testFloat"   
              key="[0.0, 0.1, 0.9, 1.0]"   
              keyValue="[ 0.0, 1.0, 1.0, 0.0 ]"       
              fieldToInterp="toastBg.opacity"   />
        </Animation>
    </children>
</component>