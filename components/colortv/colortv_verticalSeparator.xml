<component name="colortv_verticalSeparator" extends="Group">

    <script type="text/brightscript" uri="pkg:/components/colortv/colortv_verticalSeparator.brs" />

    <interface>
        <field id="focused" type="bool" />
        <field id="colors" type="colorarray" />
    </interface>
    
    <children>
        <Label
          id="separator"
          width="0"
          height="20"
          color="0x000000ff"
          text="|"
          >
            <Font role="font" uri="pkg:/fonts/colortv/ABeeZee-Regular.ttf" size="16" />
        </Label>
        <Animation
          id="separatorFocusedAnimation"
          duration="0.2"  
          repeat="false"
          easeFunction="linear"
          >
            <ColorFieldInterpolator
              key="[0.0, 1.0]"
              keyValue="[0x4a4a4aFF, 0xFFFFFFFF]"
              fieldToInterp="separator.color" />
        </Animation>
        <Animation
          id="separatorUnfocusedAnimation"
          duration="0.2"  
          repeat="false"
          easeFunction="linear"
          >
            <ColorFieldInterpolator
              key="[0.0, 1.0]"    
              keyValue="[ 0xFFFFFFFF, 0x4a4a4aFF ]"
              fieldToInterp="separator.color" />
        </Animation>
    </children>
</component>
