    <script type="text/brightscript" uri="pkg:/components/colortv/grid/colortv_gridContentSimplifiedElement.brs" />

    <interface>
        <field id="focused" type="bool" />
        <field id="contentModel" type="assocarray" />
        <field id="textColor" type="colorarray" />
    </interface>

    <children>
        <Group
          id="gridElementsContents"
          >
            <Poster 
              id="backgroundImage"
              width="880"
              height="495"
              loadDisplayMode="scaleToZoom"
              failedBitmapUri="pkg:/images/colortv/color_tv_grid_bg_placeholder.jpg" />

            <Rectangle
              id="backgroundOverlay"
              width="880"
              height="495"
              color="0x00000090" />

            <colortv_autoCloseTimer 
              id="autoplayTimer"
              width="50"
              height="50"
              visible="false"
              duration="8"
              translation="[770,20]" />

            <Group
              id="dataContainer"
              >
                <Group
                  id="metaDataContainer"
                  >
                    <Poster
                      id="clockImage"
                      width="22"
                      height="22"
                      translation="[45,432]"
                      blendColor="0x4a4a4aff"
                      uri="pkg:/images/colortv/color_tv_icon_clock.png" />
                    <Label
                      id="duration"
                      width="70"
                      height="15"
                      horizAlign = "center"
                      translation="[68,433]"
                      color="0x000000ff"
                      text="1h 48m"
                      >
                        <Font role="font" uri="pkg:/fonts/colortv/ABeeZee-Regular.otf" size="16" />
                    </Label>
                </Group>
                <Group
                  id="tagsContainer"
                  translation="[530,35]" />
                <Label
                  id="title"
                  width="575"
                  height="25"
                  translation="[45,388]"
                  color="0x4a4a4aff"
                  text="Rouge One: A Star Wars Story"
                  font="font:SmallBoldSystemFont" />
            </Group>
            <Poster 
              id="playButton"
              uri="pkg:/images/colortv/color_tv_icon_play.png"
              width="47"
              height="55"
              loadDisplayMode="scaleToFit"
              translation="[416,220]"/>
        </Group>
    </children>
</component>
